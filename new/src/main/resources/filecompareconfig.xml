<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<!-- These can be configured with the command line and API (presenters) as well -->
	<entry key="CREATE_DIFFIMAGES">false</entry>
	<entry key="CREATE_ORIGIMAGES">false</entry>
	<entry key="LOG_LEVEL">INFO</entry>
	<entry key="MAX_ERRORS_PER_FILE">100</entry>
	<!-- Continuous comparison is enabled by default -->
	<entry key="CONTINUOUS_COMPARE">true</entry>
	<entry key="CONTINUOUS_COMPARE_TYPES">TEXT</entry>
	<entry key="CONTINUOUS_FILTERS">INVISIBLEELEMENTS</entry>
	<!-- Options for the HEADERFOOTER filter, -1 enables auto-detection -->
	<entry key="FIXED_HEADER_SIZE">-1</entry>
	<entry key="FIXED_FOOTER_SIZE">-1</entry>
	<!-- The modules and normalizers are used in case CONTINUOUS_COMPARE is set to 'false' -->
	<entry key="MODULES">MODULE_IMAGE, MODULE_PAGEPROPERTIES, MODULE_LINES,MODULE_TEXT_WORDORDER</entry>
	<entry key="NORMALIZERS">NORMALIZER_MARGIN</entry>
	<!-- Options for line comparison, POSITION is only used if CONTINUOUS_COMPARE is set to 'false' -->
	<entry key="TOLERANCE_BOX_ROUND_EDGES">3</entry>
	<entry key="TOLERANCE_LINE_POSITION">3</entry>
	<entry key="TOLERANCE_LINE_SIZE">2</entry>
	<entry key="TOLERANCE_LINE_STYLE">false</entry>
	<entry key="TOLERANCE_LINE_THICKNESS">1</entry>
	<entry key="TOLERANCE_UNDERLINE_LENGTH">0.1</entry>
	<!-- Options for the image comparison, DISTANCE is only used if CONTINUOUS_COMPARE is set to 'false' -->
	<entry key="TOLERANCE_IMAGE_DISTANCE">3</entry>
	<entry key="TOLERANCE_IMAGE_PIXEL_VALUE">0.05</entry>
	<entry key="TOLERANCE_IMAGE_SIZE">0.1</entry>
	<entry key="USE_PIXEL_MEDIUM_VALUE">true</entry>
	<!-- Options for the page bounds comparison, these settings will only be used if CONTINUOUS_COMPARE is set to 'false' -->
	<entry key="TOLERANCE_PAGE_RATIO">0.1</entry>
	<entry key="TOLERANCE_PAGE_LEFTCORNER">3</entry>
	<entry key="TOLERANCE_PAGE_SIZE">2</entry>
	<entry key="COMPARE_TEXT_CASE_SENSITIVE">false</entry>
	<entry key="COMPARE_TEXT_STYLES">false</entry>
</properties>